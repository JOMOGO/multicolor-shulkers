	"icon": "assets/multicolor-shulkers/icon.png",
	"authors": [
		"JOMOGO"
	],
	"contact": {
		"sources": "https://github.com/JOMOGO/multicolor-shulkers"
	},
	"license": "MIT",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.multicolorshulkers.MultiColorShulkers"
		],
		"client": [
			"com.multicolorshulkers.client.MultiColorShulkersClient"
		],
		"modmenu": [
			"com.multicolorshulkers.client.ModMenuIntegration"
		]
	},
	"mixins": [
